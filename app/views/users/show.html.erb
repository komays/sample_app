<% provide(:title, @user.name) %>
<div class="row">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
</div>
<div class="container">
    <div class="row">
      <% if @user.items.any? %>
        <h3>Items (<%= @user.items.count %>)</h3>
        <ol class="col-md-12">
          <%= render @items %>
        </ol>
        <%= will_paginate @items %>
      </div>
    <% end %>
  </div>
</div>